<% recipes.forEach(function (recipe) { %>
  <tr>
    <td>
      <a href="#/recipes/<%= recipe.id %>">
        <%= recipe.name %>
      </a>
    </td>
    <td>
      <a href="#/users/<%= recipe.author.id %>">
        <%= recipe.author.name %>
      </a>
    </td>
    <td>
      <%= Math.floor(recipe.prep_time/3600) %>:<%= recipe.prep_time/60 %>
    </td>
    <td>
      <%= Math.floor(recipe.cook_time/3600) %>:<%= recipe.cook_time/60 %>
    </td>
    <td>
      <%= recipe.servings %>
    </td>
    <td>
      <%= new Date(recipe.created_at).toLocaleDateString("en-US") %>
    </td>
  </tr>
<% }); %>