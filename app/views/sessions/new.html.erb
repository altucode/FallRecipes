<% if flash[:error] %>
  <label><%= flash[:error] %></label>
<% end %>
<form action="<%= session_url %>" method="POST">
  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">
  <label>
    Username
    <input name="user[username]">
  </label>
  <label>
    Password
    <input name="user[password]" type="password">
  </label>
  <button>Log In</button>
</form>