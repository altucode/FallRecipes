<% if flash[:error] %>
  <label><%= flash[:error] %></label>
<% end %>
<form action="<%= session_url %>" method="POST">
  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">
  <input name="user[username]">
  <input name="user[password]" type="password">
  <button>Submit</button>
</form>