<!DOCTYPE html>
<html>
<head>
  <title>FallRecipes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="modal-layer">
    <div class="modal window">
      <menu class="toolbar">
        <menuitem>
          <button>X</button>
        </menuitem>
      </menu>
      <form class="login" action="<%= session_url %>" method="POST">
        <input
          name="authenticity_token"
          type="hidden"
          value="<%= form_authenticity_token %>">
        <input type="text" name="prevent_autofill" id="prevent_autofill" value="" style="display:none;" />
        <input type="password" name="password_fake" id="password_fake" value="" style="display:none;" />
        <input name="user[username]" placeholder="Username">
        <input name="user[password]" type="password" placeholder="Password">
        <button>Log In</button>
        <p>New user? <a href="<%= new_user_url %>">Join for free!</a></p>
      </form>
    </div>
  </div>
  <nav class="site-navbar">
    <a class="home" href="<%= root_url %>">
      <img src="<%= asset_path('logo.png') %>">
    </a>
    <ul>
      <li><a href="<%= api_recipes_url %>">Recipes</a></li>
    </ul>
  </nav>
  <% if user_logged_in? %>
    <ul>
      <li><%= current_user.username %></li>
      <li>
        <form action="<%= session_url %>" method="POST">
          <input
            name="authenticity_token"
            type="hidden"
            value="<%= form_authenticity_token %>"
          >
          <input
            name="_method"
            type="hidden"
            value="DELETE">
          <button>Log Out</button>
        </form>
      </li>
    </ul>
  <% end %>

<%= yield %>

</body>
</html>
